{
  "name": "datasafe-ui",
  "version": "0.0.1",
  "description": "datasafe-ui with web and electron interface",
  "keywords": [
    "angular",
    "angular 15",
    "electron",
    "typescript",
    "sass"
  ],
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "npm run postinstall:electron && ../datasafe-ui/node_modules/.bin/electron-builder install-app-deps",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "ng": "../datasafe-ui/node_modules/.bin/ng",
    "start": "npm run postinstall:electron && ../datasafe-ui/node_modules/.bin/npm-run-all -p ng:serve electron:serve",
    "build": "npm run postinstall:electron && npm run electron:serve-tsc && ../datasafe-ui/node_modules/.bin/ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "../datasafe-ui/node_modules/.bin/ng serve",
    "ng:serve:web": "npm run postinstall:web && ../datasafe-ui/node_modules/.bin/ng serve -o",
    "electron:serve-tsc": "../datasafe-ui/node_modules/.bin/tsc -p tsconfig-serve.json",
    "electron:serve": "../datasafe-ui/node_modules/.bin/wait-on http-get://localhost:4200/ && npm run electron:serve-tsc && electron . --serve",
    "electron:local": "npm run build:prod && ../datasafe-ui/node_modules/.bin/electron .",
    "electron:linux": "npm run build:prod && ../datasafe-ui/node_modules/.bin/electron-builder build --linux",
    "electron:windows": "npm run build:prod && ../datasafe-ui/node_modules/.bin/electron-builder build --windows",
    "electron:mac": "npm run build:prod && ../datasafe-ui/node_modules/.bin/electron-builder build --mac",
    "test": "npm run postinstall:web && ../datasafe-ui/node_modules/.bin/ng test",
    "e2e": "npm run build:prod && ../datasafe-ui/node_modules/.bin/mocha --timeout 300000 --require ts-node/register e2e/**/*.spec.ts"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "17.1.3",
    "@angular/animations": "17.1.3",
    "@angular/cdk": "17.1.2",
    "@angular/cli": "17.1.3",
    "@angular/common": "17.1.3",
    "@angular/compiler": "17.1.3",
    "@angular/compiler-cli": "17.1.3",
    "@angular/core": "17.1.3",
    "@angular/forms": "17.1.3",
    "@angular/material": "17.1.2",
    "@angular/material-moment-adapter": "17.1.2",
    "@angular/platform-browser": "17.1.3",
    "@angular/platform-browser-dynamic": "17.1.3",
    "@angular/router": "17.1.3",
    "@types/jasmine": "4.3.6",
    "@types/jasminewd2": "2.0.11",
    "@types/mocha": "10.0.2",
    "@types/node": "20.8.0",
    "codelyzer": "6.0.2",
    "core-js": "3.33.0",
    "electron": "^26.6.9",
    "electron-builder": "24.7.0",
    "electron-reload": "1.5.0",
    "hammerjs": "2.0.8",
    "jasmine-core": "5.1.1",
    "jasmine-spec-reporter": "7.0.0",
    "karma": "6.4.2",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "mocha": "10.2.0",
    "moment": "2.29.4",
    "npm-run-all": "4.1.5",
    "rxjs": "7.8.1",
    "spectron": "19.0.0",
    "ts-node": "10.9.1",
    "tslint": "5.17.0",
    "typescript": "5.2.2",
    "wait-on": "^7.2.0",
    "web-animations-js": "2.3.2",
    "webdriver-manager": "13.0.2",
    "zone.js": "^0.14.3"
  },
  "engines": {
    "node": ">=18.10.0"
  }
}
